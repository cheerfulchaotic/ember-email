{{#paper-toolbar accent=true}}
  <div class="md-toolbar-tools">
    <span class="md-breadcrumb-page">{{model.name}}</span>
  </div>
{{/paper-toolbar}}

{{#paper-list}}
  {{#each model.emails as |email|}}
    {{#link-to "mail.folder.email" email.id class="test-email-link"}}
      {{#paper-item class="test-email-row"}}
        {{#paper-checkbox}}{{/paper-checkbox}}
        <span style="padding-right: 1rem;">{{paper-icon "star border"}}</span>

        <p>{{email.fromName}}</p>
        <p>{{email.subject}}</p>
        <p>{{moment-calendar email.timestamp}}</p>
      {{/paper-item}}
    {{/link-to}}
    {{paper-divider}}
  {{/each}}
{{/paper-list}}
